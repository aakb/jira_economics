{% set globalMenuItems = {
    dash:    { title: "Dash", desc: "App oversigt", icon: "fa-th-large", path: "/", active: true },
    faktura:    { title: "Faktura", desc: "Opret og rediger fakturaer baseret på tasks i Jira", icon: "fa-file-invoice", path: "/", active: false },
    taskWizard:    { title: "Task wizard", desc: "Opret mange tasks på en gang.", icon: "fa-tasks", path: "/", active: false },
    ordre:    { title: "Ordre", desc: "Opret ordrepakker ud fra tasks i Jira", icon: "fa-box-open", path: "/", active: false },
    sprintplan:    { title: "Sprintplan", desc: "Planlægningsoversigt og sprintrapporter baseret på tasks i Jira", icon: "fa-braille", path: "/", active: false },
    nytProjekt:    { title: "Nyt projekt", desc: "Opret et nyt Jira-projekt ud fra en skabelon", icon: "fa-project-diagram", path: "/", active: false },
    udgift:    { title: "Udgift", desc: "Opret udgifter i forbindelse med projekter og tasks", icon: "fa-credit-card", path: "/", active: false },
} %}

<div class="global-sidebar">
  <nav class="navbar navbar-expand-md navbar-dark bg-primary flex-column p-1">
    <a class="navbar-brand mr-0 ml-0 mb-3" href="/">
      <img src="{{ asset('build/images/itk-jira-symbol.svg') }}">
    </a>
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
        aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="collapsibleNavId">
      <ul class="navbar-nav flex-column">
        {% if globalMenuItems is defined %}
          {% for globalMenuItem in globalMenuItems %}
            <li class="nav-item">
              <a class="nav-link{{ globalMenuItem.active ? ' active' : '' }} pl-0 pr-0 text-center" href="{{ globalMenuItem.path }}" data-toggle="tooltip" data-placement="right" title="{{ globalMenuItem.desc }}">
                <i class="fas {{ globalMenuItem.icon }} fa-fw fa-2x" ></i><span class="d-block">{{ globalMenuItem.title }}</span>
              </a>
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    </div>
  </nav>
</div>
