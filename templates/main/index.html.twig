{% extends 'base.html.twig' %}

{% block title 'main.title'|trans %}

{% block content %}
    <h1>{{ block('title') }}</h1>

    <div class="row">
        {% for app in apps %}
            <div class="col-md-4 mb-3">
                <div class="card h-100">
                    <div class="row no-gutters flex-grow-1">
                        <div class="col-3 col-md-12 col-lg-3 bg-light">
                            <div class="card-img-top text-secondary text-center p-3">
                                <i class="fas {{ app.icon }} fa-fw fa-2x"></i>
                            </div>
                        </div>
                        <div class="col-9 col-md-12 col-lg-9">
                            <div class="card-body h-100 d-flex flex-column">
                                <h5 class="card-title">{{ app.title }}</h5>
                                <p class="card-text">{{ app.desc }}</p>
                                <a href="{{ path(app.routeName) }}" class="btn btn-primary mt-auto">{{ app.btnTxt }}</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
{% endblock %}
