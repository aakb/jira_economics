{% set globalMenuItems = {
    graphic_service_order:    { title: "graphic_service_order", desc: "graphic_service_order", icon: "fa-th-large", path: path('graphic_service_order_form'), active: true },
} %}

{% if is_granted('ROLE_ADMIN') %}
  {%
    set globalMenuItems = globalMenuItems|merge({
      jira:    { title: "jira", desc: "jira", icon: "fa-th-large", path: '/..'~path('jira_index'), active: false },
    })
  %}
{% endif %}

<div class="global-nav flex-grow-1">
  <nav class="navbar navbar-expand-md navbar-dark bg-primary flex-md-column p-md-1">
    <a class="navbar-brand mr-md-0 ml-md-0 mb-md-3" href="/">
      <img src="{{ asset('build/images/itk-jira-symbol.svg') }}">
    </a>
    <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse" data-target="#collapsibleNavId" aria-controls="collapsibleNavId"
        aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse align-items-start" id="collapsibleNavId">
      <ul class="navbar-nav flex-md-column">
        {% if global_menu_items is defined %}
          {% for globalMenuItem in global_menu_items %}
            <li class="nav-item">
              <a class="nav-link{{ globalMenuItem.active ? ' active' : '' }} pl-0 pr-0" href="{{ jira_path_prefix }}{{ globalMenuItem.path }}" data-toggle="tooltip" data-placement="right" title="{{ globalMenuItem.desc }}">
                <i class="fas {{ globalMenuItem.icon }} fa-fw" ></i><span class="d-md-block ml-3 ml-md-0">{{ globalMenuItem.title }}</span>
              </a>
            </li>
          {% endfor %}
        {% endif %}
      </ul>
    </div>
  </nav>
</div>
