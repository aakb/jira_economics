{% extends 'main/index.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block sidebar null %}
{% block body_id 'fos-user' %}

{% block main %}
  <div class="container">
    <div class="row">
      <div class="col-12 col-sm-6 jumbotron mt-5 offset-sm-3 pl-5 pr-5 shadow-sm">
        {% if block('page_title') %}
            <h1>{{ block('page_title') }}</h1>
        {% endif %}
        {% block fos_user_content %}{% endblock %}
      </div>
    </div>
  </div>
{% endblock %}
