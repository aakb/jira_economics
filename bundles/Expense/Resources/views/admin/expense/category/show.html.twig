{% extends 'base.html.twig' %}

{% block title %}{{ 'expense.category.show.title'|trans }}{% endblock %}

{% block content %}
    <h1>{{ 'expense.category.show.title'|trans }}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{{ 'expense.category.id'|trans }}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{{ 'expense.category.name'|trans }}</th>
                <td>{{ category.name }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-link" href="{{ path('expense_admin_category_index') }}">{{ 'expense.category.back_to_list'|trans }}</a>

    <a class="btn btn-success" href="{{ path('expense_admin_category_edit', {'id': category.id}) }}">{{ 'expense.category.action.edit'|trans }}</a>

    {{ include('@ExpenseBundle/admin/expense/category/_delete_form.html.twig') }}
{% endblock %}
