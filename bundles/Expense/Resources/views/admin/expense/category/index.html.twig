{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block content %}
    <h1>Category index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Unit price</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>{{ category.unitPrice }}</td>
                <td>
                    <a href="{{ path('expense_admin_category_show', {'id': category.id}) }}">show</a>
                    <a href="{{ path('expense_admin_category_edit', {'id': category.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <form method="post" action="{{ path('expense_admin_category_refresh') }}">
        <button class="btn btn-primary" type="submit">Refresh list from Jira</button>
    </form>

    <a class="btn btn-success" href="{{ path('expense_admin_category_new') }}">Create new</a>
{% endblock %}
